<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.senasoft.appdoman">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.AddCategoryActivity"
            android:screenOrientation="landscape"></activity>
        <activity
            android:name=".controller.ListUserActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".controller.MenuActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".controller.Score"
            android:screenOrientation="landscape" />
        <activity
            android:name=".controller.AddWordActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".controller.GameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".controller.MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".controller.AddUserActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".controller.Splash"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.Login"
            android:screenOrientation="landscape" />
        <activity
            android:name=".controller.MiniGameActivity"
            android:screenOrientation="landscape" />
    </application>

</manifest>